            $("#bt_del_"+tableCount).click(function(){
                $("#tr_"+$(this).attr("id").replace("bt_del_","")).remove();
                $("input[name='equipement_"+$(this).attr("id").replace("bt_del_","")+"']").remove();
            });
        });

    var current_index=1;
        $("#wizard-form .row").each(function(){
            $(this).hide();
        });
    $("#step-"+current_index).show();
        $("document").on("click",".isSubmit",function () {
          //  $("#wizard-form").submit();

        });
    $("#form-submit").on("click",function(e){
        if (current_index==2){
            $(this).html("Submit");
            if (!$(this).hasClass("isSubmit"))
                $(this).addClass("isSubmit");
        }
        if (current_index<3){
            $("#tab-step-"+current_index).removeClass("btn-success").addClass("btn-default");
            current_index++;
            $("#wizard-form .row").each(function(i,v){
                $(this).hide();
            });
            $("#step-"+current_index).show();
            $("#tab-step-"+current_index).removeClass("btn-default").addClass("btn-success");
            $("#tab-step-"+current_index).attr("disabled",false);
        }

        });
        $(".wizard-step").click(function(){
            var index=parseInt($(this).attr("id").replace("tab-step-",""));
            $("#tab-step-"+current_index).removeClass("btn-success").addClass("btn-default");
            current_index=index;
            $("#wizard-form .row").each(function(){
                $(this).hide();
            });
            $("#step-"+index).show();
            $("#tab-step-"+index).removeClass("btn-default").addClass("btn-success");
        });
    </script>
