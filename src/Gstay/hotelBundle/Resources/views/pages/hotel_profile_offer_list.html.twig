{% extends 'base.html.twig' %}
{% block title %} Manage Promos {% endblock %}
{% block body %}

    <link href="{{ asset('jTable/jquery.dataTables.min.css') }}" rel="stylesheet" type="text/css" />

    <!-- Wrap -->
    <div id="wrap">


    <!--Banner-->
    <section class="sub-banner">
        <!--Background-->
        <div class="bg-parallax bg-1"></div>
        <!--End Background-->
        <!-- Logo -->
        <div class="logo-banner text-center">
            <a href="" title="">

                <img src="{{ asset('bundles/app/images/logo-banner.png') }}" alt="">
            </a>
        </div>
        <!-- Logo -->
    </section>
    <!--End Banner-->

    <!-- Main -->
    <div class="main">
        <div class="container">
            <div class="main-cn element-page bg-white clearfix">
                <!--Breakcrumb-->
                <section class="breakcrumb-sc">
                    <ul class="breadcrumb arrow">
                        <li><a href=""><i class="fa fa-home"></i></a></li>
                        <li>list Event</li>
                    </ul>
                </section>
                <!--End Breakcrumb-->

                <section class="user-profile">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="user-profile__header">
                                <h4>{{ Hotel.name }}</h4>
                                <span>Member Since {{ Hotel.dateInscrit | date('M') }} {{ Hotel.dateInscrit  | date('Y') }}</span>
                                <p>
                                <p>

                                   <img src="{{ asset('images/products/'~ Hotel.imageName) }}" alt="">
                                </p>
                            </div>

                             <ul class="user-profile__navigation">
                                <li><a href="{{ path('mybookingshotel') }}"><img src="{{ asset('bundles/app/images/icon/icon-cart.png') }}" alt="">Bookings</a></li>
                                <li ><a href="{{ path('facilities_settings') }}"><img src="{{ asset('bundles/app/images/icon/icon-user.png') }}" alt="">Facilities</a></li>
                                <li class="current"><a href="{{ path('promo_hotel') }}"><img src="{{ asset('bundles/app/images/icon/icon-review.png') }}" alt="">Manage Offers</a></li>
                                <li><a href="{{ path('hotel_ProfileSettings') }}"><img src="{{ asset('bundles/app/images/icon/icon-setting.png') }}" alt="">Settings</a></li>
                                <li><a href="{{ path('room_settings') }}"><img src="{{ asset('bundles/app/images/icon/icon-heart.png') }}" alt="">Rooms & Price Tables </a></li>
                                <li><a href="{{ path('hotel_portfolio_settings') }}"><img src="{{ asset('bundles/app/images/icon/icon-back.png') }}" alt=""> Portfolio </a></li>
                                <li><a href="{{ path('fos_user_security_logout') }}"><img src="{{ asset('bundles/app/images/icon/icon-back.png') }}" alt="">Sign out</a></li>
                            </ul>

                        </div>
                        <div class="col-md-9">

                            <div class="user-form">
                                <div class="row">
                                    <div class="col-md-12">
                                        <h3>Manage Promos</h3>
                                        {% if    app.request.get('msg')  and  msg != "" %}
                                        <div class="alert alert-success">
                                            <strong>Well done!</strong>

                                            {{ app.request.get('msg') }}
                                        </div>
                                         {% endif %}
                                         <a href="">
                                        <div class="col-lg-4 col-md-6">
                                        <div class="row">
                                        <div class="col-md-6">
                                            <div class="panel panel-primary">
                                                <div class="panel-heading">
                                                    <div class="row">
                                                        <div class="col-xs-3">
                                                            <i class="fa fa-eur fa-2x"></i>
                                                        </div>

                                                    </div>
                                                </div>

                                                    <div class="panel-footer">
                                                        <span class="pull-left">Add Promo</span>
                                                        <span class="pull-right"><a href="{{ path('add_promo') }}" ><i class="fa  fa-plus"></i></a></span>
                                                        <div class="clearfix"></div>
                                                    </div>

                                            </div>
                                            </div>
                                            <div class="col-md-6">
                                            <div class="panel panel-danger">
                                                <div class="panel-heading">
                                                    <div class="row">
                                                        <div class="col-xs-3">
                                                            <i class="fa fa-pie-chart fa-2x"></i>
                                                        </div>

                                                    </div>
                                                </div>

                                                    <div class="panel-footer">
                                                        <span class="pull-left">Statistics</span>
                                                        <span class="pull-right"><a href="{{ path('linechart',{'id': Hotel.id}) }}" ><i class="fa  fa-plus"></i></a></span>
                                                        <div class="clearfix"></div>
                                                    </div>

                                            </div>
                                            </div>
                                            </div>
                                        </div>
                                         </a>

                                         <br>
                                          <br>
                                           <br>

                                        <table id="example" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                                            <thead>
                                         <tr>
                                             <th> Title</th>
                                             <th> Description</th>
                                             <th> Starts  </th>
                                             <th> Ends</th>
                                             <th> Promo </th>
                                             <th> Action</th>
                                         </tr>
                                         </thead>
                                            <tfoot>

                                            <tr>
                                                <th> Title</th>
                                                <th> Description</th>
                                                <th> Starts</th>
                                                <th> Ends </th>
                                                <th> Promo </th>
                                                <th> Action</th>
                                            </tr>
                                            </tfoot>

                                            <tbody>
                                        {% for promoHotel in promoHotel %}

                                            <tr>
                                                <td> {{ promoHotel.name }}</td>
                                                <td> {{ promoHotel.description | raw }}</td>
                                                <td> {{ promoHotel.getDateBegin() | date('y/m/d')}} </td>
                                                <td> {{ promoHotel.getDateEnd() | date('y/m/d') }} </td>
                                                <td> {{ promoHotel.pourcentage }} % </td>
                                                <td>

                                                <a href="{{ path('edit_promo',{'name': promoHotel.name}) }}"><button type="button" class="btn btn-primary" >Edit</button></a>
                                                    <a href="{{ path('delete_promo',{'id': promoHotel.id}) }}"><button type="button" class="btn btn-warning" >Delete</button></a>

                                                </td>

                                            </tr>

                                        {% endfor %}
                                            </tbody>
                        </table>
                                     </div>
                                 </div>
                             </div>
                         </div>
                </section>
            </div>
        </div>
    </div>
    <!-- End Main -->


{% endblock %}

        {% block js %}
        <script type="text/javascript" src="{{ asset('jTable/jquery-2.1.4.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('jTable/jquery.dataTables.min.js') }}"></script>
        <script type="text/javascript">$(document).ready(function() {
                $('#example').DataTable();
            } );
        </script>
        {% endblock js %}