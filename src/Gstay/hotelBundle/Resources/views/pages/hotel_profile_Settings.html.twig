{% extends 'base.html.twig' %}
{% block title %} Setting {% endblock %}
{% block body %}

    <!-- Wrap -->
    <div id="wrap">


    <!--Banner-->
    <section class="sub-banner">
        <!--Background-->
        <div class="bg-parallax bg-1"></div>
        <!--End Background-->
        <!-- Logo -->
        <div class="logo-banner text-center">
            <a href="" title="">

                <img src="{{ asset('bundles/app/images/logo-banner.png') }}" alt="">
            </a>
        </div>
        <!-- Logo -->
    </section>
    <!--End Banner-->

    <!-- Main -->
    <div class="main">
        <div class="container">
            <div class="main-cn element-page bg-white clearfix">
                <!--Breakcrumb-->
                <section class="breakcrumb-sc">
                    <ul class="breadcrumb arrow">
                        <li><a href="index.html"><i class="fa fa-home"></i></a></li>
                        <li>User Reviews</li>
                    </ul>
                </section>
                <!--End Breakcrumb-->

                <section class="user-profile">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="user-profile__header">
                                <h4>{{ profile.nom }}_{{ profile.prenom }}</h4>
                                <span>Member Sincen {{ profile.dateInscrit | date('M') }} {{ profile.dateInscrit | date('Y') }}</span>
                                <p>
                                <p>

                                    <img src="{{ asset('bundles/app/images/user/img-1.jpg') }}" alt="">
                                </p>
                            </div>

                            <ul class="user-profile__navigation">
                                <li><a href=""><img src="{{ asset('bundles/app/images/icon/icon-cart.png') }}" alt="">My Bookings</a></li>
                                <li ><a href=""><img src="{{ asset('bundles/app/images/icon/icon-user.png') }}" alt="">Facilities</a></li>
                                <li><a href="{{ path('promo_hotel') }}"><img src="{{ asset('bundles/app/images/icon/icon-review.png') }}" alt="">Manage Offers</a></li>
                                <li class="current" ><a href="{{ path('hotel_ProfileSettings') }}"><img src="{{ asset('bundles/app/images/icon/icon-setting.png') }}" alt="">Settings</a></li>
                                <li><a href="#"><img src="{{ asset('bundles/app/images/icon/icon-heart.png') }}" alt="">Rooms & Price Tables </a></li>
                                <li><a href="#"><img src="{{ asset('bundles/app/images/icon/icon-back.png') }}" alt="">Sign out</a></li>
                            </ul>

                        </div>
                        <div class="col-md-9">
                            <h2 class="user-profile__title">Settings</h2>
                            <div class="user-form">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h3>Personal Information</h3>
                                        {{ form_start(form)}}
                                        <div class="field-input">
                                            {{ form_widget(form.nom, {'attr': {'class': 'input-text','placeholder':'First Name' }}) }}

                                        </div>
                                        <div class="field-input">
                                            {{ form_widget(form.prenom, {'attr': {'class': 'input-text','placeholder':'Last Name' }}) }}
                                        </div>

                                        <div class="field-input">
                                            {{ form_widget(form.tel, {'attr': {'class': 'input-text','placeholder':'phone number') }}) }}

                                        </div>
                                        <h3>Location</h3>
                                        <div class="field-input">
                                            {{ form_widget(form.gouvernerat, {'attr': {'class': 'input-text','placeholder':'state' }}) }}

                                        </div>
                                        <div class="field-input">
                                            {{ form_widget(form.cite, {'attr': {'class': 'input-text','placeholder':'City' }}) }}

                                        </div>
                                        <div class="field-input">
                                            {{ form_widget(form.rue, {'attr': {'class': 'input-text','placeholder':'Street' }}) }}

                                        </div>

                                        <div class="field-input">
                                            {{ form_widget(form.codePostal, {'attr': {'class': 'input-text','placeholder':'zip code' }}) }}


                                        </div>
                                        <div class="field-input">
                                            {{ form_widget(form.Save, {'attr': {'class': 'awe-btn awe-btn-1 awe-btn-medium' }}) }}


                                        </div>
                                        {{ form_end(form) }}
                                    </div>
                                    <div class="col-md-6">
                                        <h3>Change Password</h3>
                                        {{ form_start(form1) }}
                                        <div class="field-input">
                                            {{ form_widget(form1.current_password, {'attr': {'class': 'input-text','placeholder':'current password' }}) }}
                                        </div>
                                        <div class="field-input">
                                            {{ form_widget(form1.plainPassword.first, {'attr': {'class': 'input-text','placeholder':'new password' }}) }}
                                        </div>
                                        <div class="field-input">
                                            {{ form_widget(form1.plainPassword.second, {'attr': {'class': 'input-text','placeholder':'new password again' }}) }}
                                        </div>
                                        <div class="field-input">
                                            <button class="awe-btn awe-btn-1 awe-btn-medium">Change Password</button>
                                        </div>
                                        {{ form_end(form1) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <!-- End Main -->

{% endblock %}
{% block js %}


<script async defer
            src="https://maps.googleapis.com/maps/api/js?language=en&key=AIzaSyA2epUEd3XrzWNiXiT8R8Q7p3XrDIYn7xg&callback=initMap">
    </script>

<script type= "text/javascript" src = "{{ asset('assests/js/countries.js') }}"></script>
{% endblock %}