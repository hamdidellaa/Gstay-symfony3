{% extends 'base.html.twig' %}
{% block title %} {{ Hotel.name }}{% endblock %}
{% block body %}
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>

    <link href="{{ asset('jTable/jquery.dataTables.min.css') }}" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="{{ asset('bundles/app/plugin/flip/compiled/flipclock.css') }}"/>

    <!--Banner-->
    <section class="sub-banner">
        <!--Background-->
        <div class="bg-parallax bg-1"></div>
        <!--End Background-->
        <!-- Logo -->
        <div class="logo-banner text-center">
            <a href="" title="">
                <img src="images/logo-banner.png" alt="">
            </a>
        </div>
        <!-- Logo -->
    </section>
    <!--End Banner-->

    <!-- Main -->
    <div class="main main-dt">
        <div class="container">
            <div class="main-cn bg-white clearfix">
                <!-- Breakcrumb -->
                <section class="breakcrumb-sc">
                    <ul class="breadcrumb arrow">
                        <li><a href="index.html"><i class="fa fa-home"></i></a></li>
                        <li><a href="hotel.html" title="">Hotels</a></li>
                        <li><a href="#" title="{{ Hotel.country }}">{{ Hotel.country }} </a></li>
                        <li>{{ Hotel.gouvernorat }}</li>
                        <li>{{ Hotel.name }}</li>
                    </ul>
                    <div class="support float-right">
                        <small>Got a question?</small> {{ Hotel.phone }}
                    </div>
                </section>
                <!-- End Breakcrumb -->

                <!-- Header Detail -->
                <section class="head-detail">
                    <div class="head-dt-cn">
                        <div class="row">
                            <div class="col-sm-7">

                                <h1>{{ Hotel.name }}  , {{ Hotel.gouvernorat }}</h1>
                                <div class="start-address">
                                    {% if (Hotel.stars == 4) %} <!--no star-->
                                        <i class="fa fa-star" style ="color:#FFD700" aria-hidden="true"></i>
                                        <i class="fa fa-star" style ="color:#FFD700" aria-hidden="true"></i>
                                        <i class="fa fa-star" style ="color:#FFD700" aria-hidden="true"></i>
                                        <i class="fa fa-star" style ="color:#FFD700" aria-hidden="true"></i>
                                    {% elseif (Hotel.stars) == 3 %}<!--one star-->
                                        <i class="fa fa-star" style ="color:#FFD700" aria-hidden="true"></i>
                                        <i class="fa fa-star" style ="color:#FFD700" aria-hidden="true"></i>
                                        <i class="fa fa-star" style ="color:#FFD700" aria-hidden="true"></i>
                                    {% elseif (Hotel.stars) == 2 %}<!--one star-->
                                        <i class="fa fa-star" style ="color:#FFD700" aria-hidden="true"></i>
                                        <i class="fa fa-star" style ="color:#FFD700" aria-hidden="true"></i>
                                    {% elseif (Hotel.stars) == 1 %}<!--one star-->
                                        <i class="fa fa-star" style ="color:#FFD700" aria-hidden="true"></i>
                                    {% elseif (Hotel.stars) == 5 %}<!--one star-->
                                        <i class="fa fa-star" style ="color:#FFD700" aria-hidden="true"></i>
                                        <i class="fa fa-star" style ="color:#FFD700" aria-hidden="true"></i>
                                        <i class="fa fa-star" style ="color:#FFD700" aria-hidden="true"></i>
                                        <i class="fa fa-star" style ="color:#FFD700" aria-hidden="true"></i>
                                        <i class="fa fa-star" style ="color:#FFD700" aria-hidden="true"></i>


                                    {% endif %}
                                    <address class="address">
                                        {{ Hotel.adresse }},{{ Hotel.gouvernorat }},{{ Hotel.country }}
                                    </address>

                                </div>
                            </div>
                            <div class="col-sm-5 text-right">
                                <p class="price-book">
                                    <a href="#check-rates" title="" class="awe-btn awe-btn-1 awe-btn-lager">View Rooms</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- End Header Detail -->

                <!-- Detail Slide -->
                <section class="detail-slider">
                    <!-- Lager Image -->
                    <div class="slide-room-lg">
                        <div id="slide-room-lg">

                            {% for hotelPortfolios in hotelPortfolios %}
                            <img src="{{ asset('images/products/'~ hotelPortfolios.imageName) }}" alt="">
                            {%  endfor %}
                        </div>
                    </div>
                    <!-- End Lager Image -->
                    <!-- Thumnail Image -->
                    <div class="slide-room-sm">
                        <div class="row">
                            <div class="col-md-8 col-md-offset-2">
                                <div id="slide-room-sm">
                                    {% for hotelPortfolios in hotelPortfolios %}
                                        <img style='' src="{{ asset('images/products/'~ hotelPortfolios.imageName) }}" alt="">
                                    {%  endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Thumnail Image -->
                </section>
                <!-- End Detail Slide -->
                <!-- Hotel Content One -->
                <section class="hotel-content detail-cn" id="hotel-content">
                    <div class="row">
                        <div class="col-lg-3 detail-sidebar">
                            <!-- Hight Light -->
                            <div class="hight-light">

                                <h2>View on Forum</h2>
                                <!-- Vote Text -->
                                <div class="row">
                                    <!-- Recommend -->
                                    <div class="col-xs-6 col-sm-6 col-md-3 col-lg-6 vote-text">
                                        <p><span>95 Offers</span></p>
                                        <small></small>
                                        <a href="" title=""></a>

                                    </div>
                                    <!-- End Recommend -->
                                    <!-- Tripadvitsor -->
                                    <div class="col-xs-6 col-sm-6 col-md-3 col-lg-6  vote-text">
                                        <img src={{ asset('bundles/app/images/icon-tripadvitsor.png') }} alt="">

                                        <small></small>
                                        <a href="" title="">145 Posts</a>
                                    </div>
                                    <!-- End Tripadvitsor -->

                                </div>
                                <!-- End Vote Text -->



                            </div>
                            <!-- End Hight Light -->
                        </div>

                        <!-- Description -->
                        <div class="col-lg-9 customer-like">

                            <h2>Why customer like this hotel</h2>


                            <div class="col-lg-6 hl-customer-like">
                                <h4 class="my-profile__title">Description</h4>
                                <ul>
                                    <li><span><strong> Architectural Style </strong>  </span>{{ Hotel.architecture }}</li>
                                    <li><span><strong> Built In </strong> </span>{{ Hotel.getDateBuilt() | date('y/m/d') }}</li>
                                    <li><span> <strong> About </strong> </span>{{ Hotel.description|raw  }}</li>


                                </ul>
                                <h4 class="my-profile__title">Location</h4>
                                <ul>
                                    <li><strong> STATE </strong> {{ Hotel.gouvernorat }}</li>
                                    <li><strong> Country </strong> {{ Hotel.country }}</li>
                                    <li><strong> Street Adress </strong> {{ Hotel.adresse }}</li>
                                    <li><strong> Phone </strong> {{ Hotel.phone }}</li>


                                </ul>
                            </div>
                            <div class="col-lg-6 hl-customer-like">



                                <div style="width: 100%"><iframe width="100%" height="400" src="http://www.citymaps.ie/create-google-map/map.php?width=100%&amp;height=400&amp;hl=en&amp;coord={{ Hotel.altitude }},{{ Hotel.langitude }}&amp;q={{ Hotel.adresse }} +()&amp;ie=UTF8&amp;t=&amp;z=14&amp;iwloc=B&amp;output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"> </iframe></div>
                            </div>





                        </div>
                        <!-- End Description -->
                    </div>

                </section>
                <!-- End Hotel Content One -->

                <!-- Check Rates-->
                <section class="check-rates detail-cn" id="check-rates">
                    <div class="row">
                        <div class="col-lg-3 detail-sidebar">
                            <div class="scroll-heading">
                                <h2>Rooms & Prices</h2>
                                <hr class="hr">
                                <a href="#hl-features" title="">Facilities</a>
                                <a href="#details-policies" title="">Promos</a>
                                <a href="#about-area" title="">Google Map Location</a>
                                <a href="#review-detail" title="">Reviews</a>
                            </div>
                        </div>
                        <div class="col-lg-9 ">

                            <!-- Form Check Hotel Availability -->
                            <!-- Form Check Hotel Availability -->

                            <div class="service-check-rate">
                                <h2>Rooms & Prices</h2>
                                <div class="table-responsive">
                                    <table id="example" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                                        <thead>
                                        <tr>
                                            <th> Thumbnail</th>
                                            <th> Title</th>
                                            <th> Description</th>
                                            <th> Price </th>
                                        </tr>
                                        </thead>
                                        <tfoot>

                                        <tr>
                                            <th> Thumbnail</th>
                                            <th> Title</th>
                                            <th> Description</th>
                                            <th> Price </th>
                                        </tr>
                                        </tfoot>

                                        <tbody>
                                        {% for rooms in rooms %}

                                            <tr>

                                                <td>  <img style="max-height: 80px" src="{{ asset('images/products/'~ rooms.imageName) }}" alt=""></td>
                                                <td> {{ rooms.name }}</td>
                                                <td> {{ rooms.description }}</td>
                                                <td> {{ rooms.price }}</td>

                                            </tr>

                                        {% endfor %}
                                        </tbody>
                                    </table>

                                </div>
                            </div>

                            <!-- Form Check Hotel Availability -->



                            <!-- Hotel Availability -->

                            <!-- Hotel Availability -->
                        </div>
                    </div>
                </section>
                <!-- Hotel Features -->
                <section class="hl-features detail-cn" id="hl-features">
                    <div class="row">
                        <div class="col-lg-3 detail-sidebar">
                            <div class="scroll-heading">
                                <h2>Facilities</h2>
                                <hr class="hr">
                                <a href="#check-rates" title="">Rooms & Prices</a>
                                <a href="#about-area" title="">Google Map Location</a>
                                <a href="#details-policies" title="">Promos</a>
                                <a href="#review-detail" title="">Reviews</a>
                            </div>
                        </div>
                        <div class="col-lg-9 hl-features-cn">
                            <div class="featured-service">
                                <h3>Facilities</h3>
                                <ul class="service-list">
                                    {% for felicity in felicity %}
                                    <li class="unselected">

                                        <figure>
                                            <div class="icon-service">
                                                {% if felicity.name == 'Smoking area' %}
                                                <img src={{ asset('bundles/app/images/icon-service-10.png') }} alt="">
                                                {% endif %}
                                                {% if felicity.name == 'Spa service' %}
                                                    <img src={{ asset('bundles/app/images/icon-service-2.png') }} alt="">
                                                {% endif %}
                                                {% if felicity.name == 'Restaurant' %}
                                                    <img src={{ asset('bundles/app/images/icon-service-5.png') }} alt="">
                                                {% endif %}
                                                {% if felicity.name == 'Airport transfer' %}
                                                    <img src={{ asset('bundles/app/images/icon-step-flight.png') }} alt="">
                                                {% endif %}
                                                {% if felicity.name == 'Laundry service' %}
                                                    <img src={{ asset('bundles/app/images/icon-service-11.png') }} alt="">
                                                {% endif %}
                                                {% if felicity.name == '24-hour front desk' %}
                                                    <img src={{ asset('bundles/app/images/icon-service-14.png') }} alt="">
                                                {% endif %}
                                                {% if felicity.name == 'Hair dryer' %}
                                                    <img src={{ asset('bundles/app/images/icon-service-13.png') }} alt="">
                                                {% endif %}
                                                {% if felicity.name == 'Swimming pool' %}
                                                    <img src={{ asset('bundles/app/images/icon-service-7.png') }} alt="">
                                                {% endif %}
                                                {% if felicity.name == 'Sauna service' %}
                                                    <img src={{ asset('bundles/app/images/icon-service-4.png') }} alt="">
                                                {% endif %}
                                                {% if felicity.name == 'Free parking' %}
                                                    <img src={{ asset('bundles/app/images/icon-service-3.png') }} alt="">
                                                {% endif %}
                                                {% if felicity.name == 'Casino' %}
                                                    <img src={{ asset('bundles/app/images/icon-service-6.png') }} alt="">
                                                {% endif %}
                                                {% if felicity.name == 'Business center' %}
                                                    <img src={{ asset('bundles/app/images/icon-service-12.png') }} alt="">
                                                {% endif %}
                                                {% if felicity.name == 'Free Breakfast' %}
                                                    <img src={{ asset('bundles/app/images/icon-service-1.png') }} alt="">
                                                {% endif %}

                                            </div>
                                            <figcaption>{{ felicity.name }}</figcaption>
                                        </figure>

                                    </li>
                                    {% endfor %}


                                </ul>
                            </div>

                        </div>
                    </div>
                </section>
                <!-- End Hotel Features -->

                <!-- Details-Policies -->
                <section class="details-policies detail-cn" id="details-policies">
                    <div class="row">
                        <div class="col-lg-3 detail-sidebar">
                            <div class="scroll-heading">
                                <h2>Promos</h2>
                                <hr class="hr">
                                <a href="#about-area" title="">Google Map Location</a>
                                <a href="#check-rates" title="">Check Rooms &amp; Prices</a>
                                <a href="#hl-features" title="">Facilities</a>
                                <a href="#review-detail" title="">Reviews</a>
                            </div>
                        </div>
                        <div class="col-lg-9">
                            <div class="service-check-rate">
                                <h2>Offers Available</h2>
                                <div class="table-responsive">
                                    <table id="example2" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                                        <thead>
                                        <tr>
                                            <th> Thumbnail</th>
                                            <th> Title</th>
                                            <th> Description</th>
                                            <th> Price </th>
                                        </tr>
                                        </thead>
                                        <tfoot>

                                        <tr>
                                            <th> Thumbnail</th>
                                            <th> Title</th>
                                            <th> Description</th>
                                            <th> Price </th>
                                        </tr>
                                        </tfoot>


                                        <tbody>
                                        {% for promos in promos %}

                                            <tr>

                                                <td> <a href="{{ path("offer_detail",{'id':promos.id}) }}"> <img style="max-height: 80px" src="{{ asset('images/products/'~ promos.roomConcerned.imageName) }}" alt=""></a></td>
                                                <td> <a href="{{ path("offer_detail",{'id':promos.id}) }}">{{ promos.name }}</a> </td>
                                                <td> <a href="{{ path("offer_detail",{'id':promos.id}) }}">{{ promos.description }}</a></td>
                                                <td> <a href="{{ path("offer_detail",{'id':promos.id}) }}">{{ promos.pourcentage }} % Off </a></td>

                                            </tr>

                                        {% endfor %}
                                        </tbody>
                                    </table>

                                </div>
                            </div>

                        </div>


                    </div>
                </section>
                <!-- End Details-Policies -->

                <!-- About Area -->
                <section class="about-area detail-cn" id="about-area">
                    <div class="row">
                        <div class="col-lg-3 detail-sidebar">
                            <div class="scroll-heading">
                                <h2>Google Map</h2>
                                <hr class="hr">
                                <a href="#check-rates" title="">Check Rooms &amp; Prices</a>
                                <a href="#hl-features" title="">Facilities</a>
                                <a href="#review-detail" title="">Reviews</a>
                                <a href="#details-policies" title="">Promos</a>
                            </div>
                        </div>
                        <div class="col-lg-9">
                            <h3> Google Map Location </h3>
                            <div style="width: 100%"><iframe width="100%" height="400" src="http://www.citymaps.ie/create-google-map/map.php?width=100%&amp;height=400&amp;hl=en&amp;coord={{ Hotel.altitude }},{{ Hotel.langitude }}&amp;q={{ Hotel.adresse }} +()&amp;ie=UTF8&amp;t=&amp;z=14&amp;iwloc=B&amp;output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"> </iframe></div>
                        </div>
                    </div>
                </section>
                <!-- End About Area -->


                <!-- Hotel Detail Reviews -->
                <section class="review-detail detail-cn" id="review-detail">
                    <div class="row">
                        <div class="col-lg-3 detail-sidebar">
                            <div class="scroll-heading">
                                <h2>Reviews</h2>
                                <hr class="hr">
                                <a href="#check-rates" title="">Rooms & Prices</a>
                                <a href="#hl-features" title="">Facilities</a>
                                <a href="#details-policies" title="">Promos</a>
                                <a href="#about-area" title="">Google Map Location</a>
                            </div>
                        </div>
                        <div class="col-lg-9 review-detail-cn">
                            <!-- Review Tabs -->
                            <div class="review-tabs">
                                <!-- Tabs Head -->
                                <ul class="tabs-head nav-tabs-one">

                                    <li><a data-toggle="tab" href="#section2">Gstay Reviews</a></li>
                                </ul>
                                <!-- Tabs Head -->
                                <!-- Tabs Content -->
                                <div class="tab-content">

                                    <div id="section2" class="tab-pane fade in active">

                                    </div>
                                </div>
                                <!-- Tabs Content -->
                            </div>
                            <!-- End Review Tabs -->
                            <!-- Review All -->
                            <div class="review-all">
                                <h4 class="review-h">
                                    All reviews (365)
                                </h4>
                                <!-- Review Item -->
                                <div class="row review-item">
                                    <div class="col-xs-3 review-number">
                                        <ins>5.6</ins>
                                        <span>Isbawandi Zin</span>
                                        <small>from London, UK, 3/2/ 2014</small>
                                    </div>
                                    <div class="col-xs-9 review-text">
                                        <ul>
                                            <li><span class="icon fa fa-plus"></span>Location, warmth, cleanliness</li>
                                            <li><span class="icon icon-minus fa fa-minus"></span>Noisy, expensive</li>
                                        </ul>
                                        <p>
                                            Our stay was pleasant and joyful. We stayed in an apartment meant for 3 adults. First and foremost, close proximity to tube station was the reason of choosing this hotel. The cleaning services were fantastic. The support services were prompt...
                                        </p>
                                    </div>
                                </div>
                                <!-- End Review Item -->

                            </div>
                            <!-- End Review All -->
                        </div>
                    </div>
                </section>
                <!-- End Hotel Detail Reviews -->

                <section class="detail-footer detail-cn">
                    <div class="row">
                        <div class="col-lg-3"></div>
                        <div class="col-lg-9 detail-footer-cn">
                            <!-- Show More Book -->
                            <div class="row">
                                <div class="col-xs-5 ">
                                    <div class="review-more">
                                        <a href="" title=""><i class="icon"></i> Show more reviews</a>
                                    </div>
                                </div>
                                <div class="col-xs-7 text-right">
                                    <p class="price-book">

                                    </p>
                                </div>
                            </div>
                            <!-- End Show More Book -->
                        </div>
                    </div>
                </section>

                <script type="text/javascript" src="js/library/SmoothScroll.js"></script>
            </div>
        </div>
    </div>
{% endblock %}
  {% block js %}
      <script type="text/javascript" src="{{ asset('jTable/jquery-2.1.4.min.js') }}"></script>
      <script type="text/javascript" src="{{ asset('jTable/jquery.dataTables.min.js') }}"></script>
      <script type="text/javascript">$(document).ready(function() {
              $('#example').DataTable();
          } );
      </script>
      <script type="text/javascript">$(document).ready(function() {
              $('#example2').DataTable();
          } );
      </script>
      <script src="{{ asset('bundles/app/plugin/flip/compiled/flipclock.js') }}"></script>
  {% endblock js %}
